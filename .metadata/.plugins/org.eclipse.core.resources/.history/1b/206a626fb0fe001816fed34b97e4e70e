		ApplicationContext context = new ClassPathXmlApplicationContext("Spring9.xml");
		 ((AbstractApplicationContext) context).registerShutdownHook();
		LifeCycle lifecycle=(LifeCycle) context.getBean("cycle");
		lifecycle.getMessage();
	
		
		
		
	}
}
